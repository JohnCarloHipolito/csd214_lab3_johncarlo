<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" prefHeight="480.0" prefWidth="560.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.triosstudent.csd214_lab3_johncarlo.controller.LoginController">

    <Label text="HRM Login" style="-fx-font-size: 20; -fx-font-weight: bold"/>
    <Pane minHeight="20.0"/>

    <Label text="Email"/>
    <TextField fx:id="emailTF" maxWidth="250"/>
    <Pane minHeight="20.0"/>

    <Label text="Password"/>
    <PasswordField fx:id="passwordTF" maxWidth="250"/>
    <Pane minHeight="20.0"/>

    <Label fx:id="errorMessageLbl" textFill="RED"/>
    <Pane minHeight="10.0"/>

    <Button text="Login" onAction="#onLoginAction"/>
    <Pane minHeight="20.0"/>
</VBox>
